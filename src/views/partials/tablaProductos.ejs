<div class=" row align-items-center justify-content-center" style="margin-top:3%">
    <div class="col-sm-4 bg-light border border-secondary rounded shadow p-3 mb-5"> 
        <table class="table text-secondary">
            <tr>
                <td>
                    <h2 class="text-center text-secondary">Bienvenido</h2>
                    <h3 class="text-center text-secondary"><%= nombre %></h3>
                </td>
                <td>
                    <a href="/login/logout" class="btn btn-danger">Cerrar Sesi√≥n</a>
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="col-sm-4 bg-light border border-secondary rounded shadow p-3 mb-5"> 
    <h2 class="text-center">Ingresar producto</h2>
    <br>
    <form id="formulario">
        <div class="text">
            <b>Nombre:</b>
            <br>
            <input type="hidden" name="idProduct" id="idProduct" value="1" required>
            <input type="text" class="form-control" name="title" id="titulo" required>
        </div>
        <div class="form-group">
            <b>Precio:</b>
            <br>
            <input type="number" step="0.01" class="form-control" name="price" id="precio" required>
        </div>
        <div class="form-group">
            <b>Url Foto:</b>
            <br>
            <input type="url" name="thumbnail" class="form-control" id="foto" required>
        </div>
        <br>
        <input type="submit" id="guardar" class="btn btn-outline-success" value="Guardar"></input>
    </form>
</div>

<div class=" row align-items-center justify-content-center">
    <div class="col-sm-4 bg-light border border-secondary rounded shadow p-3 mb-5"> 
        
        <div class="table-responsive">
        <h2 class="text-center text-secondary">Productos</h2>
        <hr>
            <table class="table text-secondary" id="productos">
            </table>
        </div>
    </div>
</div>